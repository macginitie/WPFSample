<Window x:Class="WpfTextRender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextRender"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <local:OutlineText Margin="0,5"></local:OutlineText>
        <Slider Name="FontSizeSlider" Minimum="360" Maximum="420" Value="400"  HorizontalAlignment="Left" Margin="328,40,0,0" VerticalAlignment="Top" Width="141"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="328,10,0,0" TextWrapping="Wrap" Text="FontSize" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
